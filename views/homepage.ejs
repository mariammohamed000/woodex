<section class="section product" id="product" aria-label="product">
  <div class="container">
    <div class="title-wrapper">
      <h2 class="h2 section-title">Popular Products</h2>

      <ul class="filter-btn-list">
        <li class="sidebar-item">
          <button class="sidebar-link" aria-label="filter" data-nav-link>
            <ion-icon name="funnel-outline" aria-hidden="true"></ion-icon>
          </button>
        </li>

        <li class="filter-btn-item">
          <button class="filter-btn active" data-filter-btn="all" onclick="filterProducts('all')">All Products</button>
        </li>

        <li class="filter-btn-item">
          <button class="filter-btn" data-filter-btn="Accessory" onclick="filterProducts('Accessory')">Accessory</button>
        </li>

        <li class="filter-btn-item">
          <button class="filter-btn" data-filter-btn="Decoration" onclick="filterProducts('Decoration')">Decoration</button>
        </li>

        <li class="filter-btn-item">
          <button class="filter-btn" data-filter-btn="Furniture" onclick="filterProducts('Furniture')">Furniture</button>
        </li>
      </ul>
    </div>

    <ul class="grid-list product-list" data-filter="all">
      <% products.forEach(product => { %>
        <li class="<%= product.category %> product-item">
          <div class="product-card">
            <a href="#" class="card-banner img-holder has-before" style="--width: 300; --height: 300;">
              <img src="<%= product.productPicture %>" width="300" height="300" loading="lazy" alt="<%= product.name %>" class="img-cover">
              <ul class="card-action-list">
                <li>
                  <button class="card-action-btn" aria-label="add to cart" title="add to cart"
                    <% if (typeof user !== 'undefined' && user) { %>
                      onclick="addToCart('<%= user._id %>', '<%= product._id %>')"
                    <% } else { %>
                      onclick="window.location.href = '/signin'"
                    <% } %>>
                    <ion-icon name="add-outline" aria-hidden="true"></ion-icon>
                  </button>
                </li>
                <li>
                  <button class="card-action-btn" aria-label="add to wishlist" title="add to wishlist"
                    <% if (typeof user !== 'undefined' && user) { %>
                      onclick="addToWishList('<%= user._id %>', '<%= product._id %>')"
                    <% } else { %>
                      onclick="window.location.href = '/signin'"
                    <% } %>>
                    <ion-icon name="heart-outline" aria-hidden="true"></ion-icon>
                  </button>
                </li>
              </ul>

              <% if (product.sale) { %>
                <ul class="badge-list">
                  <li>
                    <div class="badge orange">Sale</div>
                  </li>
                  <li>
                    <div class="badge cyan">-<%= product.discount %>%</div>
                  </li>
                </ul>
              <% } %>
            </a>

            <div class="card-content">
              <h3 class="h3">
                <a href="#" class="card-title"><%= product.name %></a>
              </h3>
              <div class="card-price">
                <% if (product.sale) { %>
                  <del class="del">$<%= product.originalPrice %></del>
                <% } %>
                <data class="price" value="<%= product.price %>">$<%= product.price %></data>
              </div>
            </div>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>
</section>


